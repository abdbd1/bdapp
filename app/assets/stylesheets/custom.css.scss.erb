/* FIN application.html.erb */

/* pages#home */
.jumbotron {
  background-image: asset-url('deskoffice.jpg');
  background-size: cover;
  height: 825px;
}

.jumbotron h1 {
  color: white !important;
  font-size: 110px !important;
}

.login {
  color: white;
  font-size: 33px;
  padding-top: 10px;
  margin-left: 73px;
}

.registro {
  color: white;
  font-size: 40px;
  margin-top: 140px;
  margin-left: 135px;
}

.login:hover, .registro .link-registro:hover {
  color: white;
  text-decoration: none;
}

.login:visited, .registro .link-registro:visited {
  color: white;
  text-decoration: none;
}
/* FIN pages#home */

/* registrations#new */
.form-row {
  margin-bottom: 120px;
}

.registration-new {
  background-image: asset-url('cellbloc.jpg');
}
/* FIN registrations#new */

/* registrations#edit */
.registration-edit {
  background-image: asset-url('laptopbloc.jpg');
}
/* FIN registrations#edit */

/* sessions#new */
.session-new {
  background-image: asset-url('keyboard.jpg');
  background-size: 100%;
  height: 648px;
}
/* FIN sessions#new */

/* users#show */
.show-left-col {
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 25px;
}

.user-show {
  background-image: asset-url('laptopcoffee.jpg');
  background-size: 100%;
  height: 648px;
}
/* FIN users#show */

/* Shared */
.background-transparent {
  background-color: rgba(0, 0, 0, 0.5);
}

.error-row {
  background-color: rgba(100, 0, 0, 0.5);
  border: 1px solid red;
  border-radius: 25px;
  color: white;
  margin-top: 20px;
}

.no-decoration, .no-decoration:hover, .no-decoration:visited,
.no-decoration:active, .no-decoration:focus {
  text-decoration: none;
}

.top-ten {
  margin-top: 10px;
}

.bottom-ten {
  margin-bottom: 10px !important;
}

.red, .red:hover, .red:visited, .red:active, .red:focus {
  color: red;
}

.white, .white:hover, .white:visited, .white:active, .white:focus {
  color: white;
}
/* FIN Shared */