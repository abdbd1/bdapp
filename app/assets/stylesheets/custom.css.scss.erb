/* Shared */
.background-transparent {
  background-color: rgba(0, 0, 0, 0.5);
}

.background-transparent-dark {
  background-color: rgba(0, 0, 0, 0.8);
}

.error-row {
  background-color: rgba(100, 0, 0, 0.5);
  border: 1px solid red;
  border-radius: 25px;
  color: white;
  margin-top: 20px;
}

.border-rounded {
  border-radius: 25px;
}

.left-col, .center-col, .right-col {
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 25px;
}

.no-decoration, .no-decoration:hover, .no-decoration:visited,
.no-decoration:active, .no-decoration:focus {
  text-decoration: none;
}

.top-ten {
  margin-top: 10px;
}

.blue, .blue:hover, .blue:visited, .blue:active, .blue:focus {
  color: blue;
}

.bottom-ten {
  margin-bottom: 10px !important;
}

.red, .red:hover, .red:visited, .red:active, .red:focus {
  color: red;
}

.submit-link {
  background-color: transparent;
  border: none;
}

.white, .white:hover, .white:visited, .white:active, .white:focus {
  color: white;
}

.yellow, .yellow:hover, .yellow:visited, .yellow:active, .yellow:focus {
  color: yellow;
}

.black, .black:hover, .black:visited, .black:active, .black:focus {
  background-color: black !important;
}
/* FIN Shared */