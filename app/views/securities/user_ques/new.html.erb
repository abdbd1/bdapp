<div class="row user_ques-new">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-header">
          <h1 align="center" class="quick-regular white">
            Refuerce su seguridad con preguntas dif√≠ciles de responder.
          </h1>
        </div>
      </div><!--col-xs-12-->
    </div><!--row-->
    
    <div class="row form-row background-transparent">
      <div align="center" class="col-xs-10 col-xs-offset-1 white">
        <% if @questions %>
          <%= form_for @answers, :url => {:controller => "user_ques", :action => "create"} do |f| %>
            <% @questions.each do |question| %>
              <div class="form-group">
                <label for="question<%= question.id %>"><h2><%= question.question %></h2></label>
                <!--<input class="form-control" id="question<%#= question.id %>" style="width: 300px; opacity: 0.8">-->
                <%= f.text_field :answer, class: "form-control", id: "question#{question.id}",
                    style: "width: 300px; opacity: 0.8", multiple: true %>
              </div>
            <% end %>
            <%= f.submit 'Guardar Respuestas', class: "btn btn-default" %>
          <% end %>
        <% end %>
      </div>
    </div><!--row-->
  </div><!--col-xs-12-->
</div><!--user_ques-new-->