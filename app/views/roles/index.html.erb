<div class="row role-index">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-header">
          <h1 align="center" class="quick-regular white">
            Aquí están los Roles
          </h1>
        </div>
      </div><!--col-xs-12-->
    </div><!--row-->
    
    <div class="row quick-regular white">
      <div class="col-xs-4 col-xs-offset-1">
        <% if current_user.counter < 3 %>
          <h2><%= link_to 'Crear', new_role_path, class: "no-decoration quick-regular white" %></h2>
          <h2><%= link_to 'Asignar', allocation_path, class: "no-decoration quick-regular white" %></h2>
        <% end %>
        <% if current_user.counter > 1 %>
          <h2 align="center">Tus Roles Asignados</h2>
          <% current_user.user_roles.each do |role| %>
            <h3><%= role.role.nombre %></h3>
          <% end %>
        <% end %>
      </div>
      
      <div class="col-xs-5 col-xs-offset-1">
        <h2 align="center">Todos los Roles</h2>
        <% @roles.each do |role| %>
          <h3>
            <%= role.nombre %>
            <% if current_user.counter < 3 %>
              <small>
                | <%= link_to "Editar", edit_role_path(role), class: "yellow" %>
                | <%= link_to "Eliminar", role, method: :delete,
                      data: { confirm: "¿Estás seguro de querer eliminar el Rol?" },
                      class: "red" %>
              </small>
            <% end %>
          </h3>
        <% end %>
      </div><!--col-xs-8 col-xs-offset-2-->
    </div><!--row-->
  </div><!--col-xs-12-->
</div><!--row role-index-->