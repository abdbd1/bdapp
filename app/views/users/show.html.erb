<div class="row user-show">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-header">
          <h1 align="center" class="quick-light white">
            <%= "¡Bienvenido, #{current_user.name}!" %>
          </h1>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1 show-left-col quick-regular white">
        <h2 align="center">Datos Personales</h3>
        <h4>Nombre: <%= current_user.name %></h4>
        <h4>Apellido: <%= current_user.surname %></h4>
        <h4>Correo: <%= current_user.email %></h4>
        <a role="button" data-toggle="collapse" href="#collapseExample"
           aria-expanded="false" aria-controls="collapseExample"
           class="no-decoration"
        >
          <h4 class="white quick-regular">
            Teléfonos
          </h4>
        </a>
        <div class="collapse" id="collapseExample">
            <p>Local</p>
            <p>Móvil</p>
            <p>Trabajo</p>
            <p>Agregar Nuevo:</p>
            <div class="form-group">
              <%#= f.text_field :numero, class: "form-control" %>
            </div>
        </div>
        <h4><%= link_to 'Editar Perfil', edit_user_registration_path, class: "white quick-regular" %></h4>
      </div><!--col-xs-4-->
    </div><!--row-->
  </div><!--col-xs-12-->
</div><!--row-->