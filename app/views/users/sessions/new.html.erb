<div class="row session-new">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-header">
          <h1 align="center" class="quick-light white">
            Inicia Sesión
          </h1>
        </div>
      </div>
    </div>
    
    <div class="row form-row background-transparent">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-xs-4">
          <% if @user.errors.any? %>
            <div class="row error-row">
              <div class="col-xs-12">
                <%#= devise_error_messages! %>
                <%= render 'shared/errors', obj: @user %>
              </div><!--col-xs-12-->
            </div><!--row-->
          <% end %>
        </div>
        
        <div class="col-xs-4">
          <div class="form-group">
            <%= f.label :email, class: "white" %>
            <%= f.email_field :email, class: "form-control", placeholder: 'nombre@dominio.com' %>
          </div>
        
          <div class="form-group">
            <%= f.label :password, 'Contraseña', class: "white" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme en este equipo", class: "white" %>
            </div>
          <% end -%>
          
          <div class="actions">
            <%= f.submit "Iniciar Sesión", class: "btn btn-default bottom-ten" %>
            <%= render "users/shared/links" %>
          </div>
        </div><!--col-xs-4-->
      <% end %>
    </div><!--row form-row background-transparent-->
  </div><!--col-xs-12-->
</div><!--row registration-new-->